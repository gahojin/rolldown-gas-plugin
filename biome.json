{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "complexity": {
        "all": true,
        "noExcessiveCognitiveComplexity": "off",
        "noUselessLoneBlockStatements": "off",
        "useSimplifiedLogicExpression": "off"
      },
      "correctness": {
        "all": true,
        "noNodejsModules": "off",
        "noUnusedImports": "error",
        "noUndeclaredVariables": "off",
        "noSwitchDeclarations": "off",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off"
      },
      "nursery": {
        "all": true,
        "noExportedImports": "off",
        "noSecrets": "off",
        "useExplicitType": "off",
        "useImportRestrictions": "off",
        "useStrictMode": "off"
      },
      "style": {
        "all": true,
        "noNamespaceImport": "off",
        "useNamingConvention": "off",
        "noDefaultExport": "off"
      },
      "suspicious": {
        "all": true,
        "noConsoleLog": "off",
        "noEmptyBlockStatements": "off",
        "noExplicitAny": "off",
        "noConsole": "off"
      },
      "performance": {
        "all": true,
        "noBarrelFile": "off",
        "noReExportAll": "off"
      },
      "security": {
        "all": true
      }
    },
    "ignore": ["jest-extended.d.ts"]
  },
  "files": {
    "ignore": ["dist/*", "build/*", "coverage/*", ".tsup/*"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 150
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 150,
      "quoteProperties": "asNeeded"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 150
    }
  }
}
